{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "lib": ["es6", "esnext"],
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "Node16",
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@theme/*": ["theme/*"],
      "@utils/*": ["utils/*"],
      "@redux/*": ["redux/*"],
      "@hooks/*": ["hooks/*"],
      "@router/*": ["navigator/router/*"],
      "@responsive/*": ["utils/responsive/*"],
      "@i18n/*": ["i18n/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "@react-native/typescript-config/tsconfig.json"
}
